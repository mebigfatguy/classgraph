<configuration scan="true">
 
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{'dd-MM-yyyy HH:mm:ss,SSS'} %5p %t %logger{2}:%L - %m%n</pattern>
    </encoder>
  </appender>
        
  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
